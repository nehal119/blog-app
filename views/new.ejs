<% include ./partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">New Post</div>
        <form action="/blogs" method="POST" class="ui form">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Post's title" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="Post's main image" required>
            </div>
            <div class="field">
                <label>Post</label>
                <textarea name="blog[body]" placeholder="Post's text" required></textarea>
            </div>
            <input type="submit" class="ui blue basic button">
        </form>
    </div>

<% include ./partials/footer %>